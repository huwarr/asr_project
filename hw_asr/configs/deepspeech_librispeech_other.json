{
  "name": "librispeech-clean",
  "n_gpu": 1,
  "preprocessing": {
    "sr": 16000,
    "spectrogram": {
      "type": "MelSpectrogram",
      "args": {
      }
    },
    "log_spec": true
  },
  "augmentations": {
    "wave": [ ],
    "spectrogram": [ ]
  },
  "arch": {
    "type": "DeepSpeech2",
    "args": {
      "n_feats": 128,
      "fc_hidden": 512
    }
  },
  "data": {
    "train": {
      "batch_size": 50,
      "num_workers": 5,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "train-other-500",
            "max_audio_length": 20.0,
            "max_text_length": 400
          }
        }
      ]
    },
    "val-clean": {
      "batch_size": 50,
      "num_workers": 5,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "dev-clean"
          }
        }
      ]
    },
    "val-other": {
      "batch_size": 50,
      "num_workers": 5,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "dev-other"
          }
        }
      ]
    },
    "test-clean": {
      "batch_size": 50,
      "num_workers": 5,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "test-clean"
          }
        }
      ]
    },
    "test-other": {
      "batch_size": 50,
      "num_workers": 5,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "test-other"
          }
        }
      ]
    }
  },
  "optimizer": {
    "type": "AdamW",
    "args": {
      "lr": 3e-4
    }
  },
  "loss": {
    "type": "CTCLoss",
    "args": {}
  },
  "metrics": [
    {
      "type": "ArgmaxWERMetric",
      "args": {
        "name": "WER (argmax)"
      }
    },
    {
      "type": "ArgmaxCERMetric",
      "args": {
        "name": "CER (argmax)"
      }
    },
    {
      "type": "BeamSearchWithLMWERMetric",
      "args": {
        "name": "WER (BeamSearch + LM)"
      }
    },
    {
      "type": "BeamSearchWithLMCERMetric",
      "args": {
        "name": "CER (BeamSearch + LM)"
      }
    },
    {
      "type": "OracleWERMetric",
      "args": {
        "name": "WER (oracle)"
      }
    },
    {
      "type": "OracleCERMetric",
      "args": {
        "name": "CER (oracle)"
      }
    }
  ],
  "lr_scheduler": {
    "type": "OneCycleLR",
    "args": {
      "steps_per_epoch": 1500,
      "epochs": 60,
      "anneal_strategy": "cos",
      "max_lr": 5e-4,
      "pct_start": 0.2
    }
  },
  "trainer": {
    "epochs": 60,
    "save_dir": "saved/",
    "save_period": 5,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 1500,
    "visualize": "wandb",
    "wandb_project": "asr_project_final",
    "len_epoch": 1500,
    "grad_norm_clip": 10
  }
}
